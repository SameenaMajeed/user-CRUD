
<%- include ('../layout/header.ejs') %>

  <div class="container-fluid">
    <h1 class="heading">WELCOME TO LOGIN PAGE</h1>
    <form class="mx-auto" action="/login" method="post">
      <h1 class="text-center">User Login</h1>
      <% if(typeof message !=='undefined' ){ %>
        <h4 style="color: red;font-weight: bold; font-size: medium;">
          <%= message %>
        </h4>
        <% } %>
          <div class="mb-3 mt-5">
            <label for="exampleInputEmail1" class="form-label">User Name</label>
            <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email" required>
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="exampleInputPassword1"
              placeholder="Enter password" required>
          </div>
          <input type="submit" value="Login" class="btn btn-primary mt-5">
          <div class="mb-3 mt-5">
            <h3>Dont have a account ?</h3>
            <p><a href="/register" class="link-underline-light">Create a new account</a></p>
          </div>
          <a href="/forget">Forget Password</a>
    </form>
  </div>



  <%- include ('../layout/footer.ejs') %>