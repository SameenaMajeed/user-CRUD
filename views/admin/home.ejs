<%- include('../layout/header.ejs') %>

    <div class="container">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <h1>Welcome,<%= admin.name %>
                </h1>
                <div>
                    <button type="button" class="btn btn-primary">
                        <a href="/admin/dashboard"  style="text-decoration: none;font-weight: bold;color: rgb(244, 238, 238); size: 20px;">DashBoard</a>
                    </button>
                </div>
            </div>
        </nav>
    </div>
    <div class="container">
        <div class="wrapper">
            <div class="row">
                <div class="col-md-6">
                    <table class="table">
